extends layout
block content
	.container
		.page-header
			h3 Saved Companies
		.ibox-content
			input#filter.form-control.input-sm.m-b-xs(type='text', placeholder='Search in result')
			table.footable.table.table-stripped(data-page-size='15', data-filter='#filter')
				thead
					tr
						th(style='width:8%;') No
						th Company
				tbody
					if companies
						each company, i in companies
							tr.gradeX
								td(style='width:8%;') #{i+1}
								td 
									a(href='#') #{company.name}
				tfoot
					tr
						td(colspan='5')
							ul.pagination.pull-right